<%= form_for([@article, @article.comments.new], remote: true, :html => {:id => "new_comment", :onsubmit => "$('#new_comment').slideUp(); $('#new_comment_link').show()"}) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Add' %> or
    <%= link_to 'Cancel', '#', :onclick => "$('#new_comment').slideUp(); $('#new_comment_link').show()" %>
  </div>
<% end %>
